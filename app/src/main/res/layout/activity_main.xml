<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fqzhang.myapplication.MainActivity">
    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:text="重新加载"/>

            <TextView
                android:id="@+id/tv_getFirstVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#efefef"
                android:padding="5dp"
                android:text="getFirstVisible"/>
            <TextView
                android:id="@+id/flexboxLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="FlexboxLayout"
                />
        </LinearLayout>

        <ListView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:divider="#ffffffff"
            android:dividerHeight="4dp"
            android:listSelector="#eeeeee"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_btn"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_marginBottom="80dp"
            android:id="@+id/bMain_Float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_dialog_email"
            app:pressedTranslationZ="12dp"
            app:elevation="6dp"
            app:fabSize="normal"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/sym_action_chat"
                android:gravity="center"
                android:text="聊天"
                android:textSize="18sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:drawableTop="@android:drawable/sym_action_email"
                android:gravity="center"
                android:text="邮件"
                android:textSize="18sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"/>

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/sym_action_call"
                android:gravity="center"
                android:text="电话"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/show_content"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent"/>
</RelativeLayout>
    <!--android:layoutAnimation="@anim/layoutanim"-->